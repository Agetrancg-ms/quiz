datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  id               Int      @id @default(autoincrement())
  text             String
  options          Json     // Array of options
  correctOption    Int
  explanation      String?  // Optional explanation for the correct answer
  group           String   // Add group field (e.g., "Sinalização", "Legislação", etc)
  difficultyLevel  Int      @default(1) // 1: Fundamental, 2: Médio, 3: Especialista
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  answers          Answer[]
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  bairro       String
  idade        Int
  sexo         String       // "M" ou "F"
  cnh          String[]     // Array of strings ["A", "B", "C", "D", "E"]
  conducao     String[]     // Array of strings ["Carro", "Moto", "Bicicleta", "Onibus", "Aplicativos", "Outros"]
  outrosConducao String?    // Campo opcional para especificar outros meios de condução
  cpf          String?      @unique
  answers      Answer[]
  quizAttempts QuizAttempt[] // Added this field
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Answer {
  id         Int      @id @default(autoincrement())
  userId     Int
  questionId Int
  answer     Int
  isCorrect  Boolean
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])

  @@index([userId])
  @@index([questionId])
}

model QuizAttempt {
  id             Int      @id @default(autoincrement())
  score          Int      // Number of correct answers
  totalQuestions Int      // Total number of questions (20)
  level          String   // fundamental, médio, especialista, ciclista, motorista, pedestre, motociclista
  answers        Json     // Array of {questionId, answer, correct}
  createdAt      DateTime @default(now())
  userId         Int?     // Optional user ID for authenticated users
  user           User?    @relation(fields: [userId], references: [id])

  @@index([userId])
}